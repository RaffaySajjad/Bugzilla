<div class="container">
  <div>
    <h2>Project: <%=@project.title%></h2>
    <%= link_to "Dashboard", manager_path(current_user.id), :class => "btn btn-success"%>
    <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "btn btn-outline-dark", :style => "float:right"%>
  </div>

  <hr/>
  <table id='employee-table' class="table table-hover">
    <thead  class="thead-light">
      <tr>
        <th>Employee ID</th>
        <th>Name</th>
        <th>Role</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each_with_index do |employee, index| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstname + ' ' + employee.lastname %></td>
          <td><%= employee.user_type %></td>
          <td><%= link_to "Add to Project", add_to_project_path(eid: employee, pid: @project_id), :class => "btn btn-outline-success", :style => "float:right"%></td>
          <td><%= link_to "Remove from Project", delete_from_project_path(eid: employee, pid: @project_id), :class => "btn btn-outline-danger", :style => "float:right"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

