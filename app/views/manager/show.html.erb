<div class="container">
  <h1><%=current_user.firstname%>'s Feed</h1>
  <p>Hello <%=current_user.firstname + ' ' + current_user.lastname + ' (Emp ID: ' + current_user.id.to_s + '), here are your projects.' %></p>

  <%= link_to "Create Project", new_project_path, :class => "btn btn-success"%>
  <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "btn btn-outline-dark", :style => "float:right"%>
  <hr/>

  <table id='employee-table' class="table table-hover">
    <thead  class="thead-light">
      <tr>
        <th>No</th>
        <th>ID</th>
        <th>Title</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each_with_index do |project, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= project.id %></td>
          <td><%= project.title %></td>
          <td><%= link_to "Manage Users", add_users_path(project), :class => "btn btn-outline-success", :style => "float:right"%></td>
          <td><%= link_to "Delete Project", project_path(project), :class => "btn btn-outline-danger", :style => "float:right", method: :delete,
              data: { confirm: 'Deleting a project will also remove all its associated employee records, any bugs and/ or feature requests. Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <div>

  </div>
</div>
