<div class="container">
  <div>
    <h2>Project: <%=@project.title%></h2>
    <%= link_to "Dashboard", manager_path(current_user.id), :class => "btn btn-success"%>
    <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "btn btn-outline-dark", :style => "float:right"%>
  </div>

  <hr/>
  <h2>Employees</h2>
  <hr/>
  <table id='employee-table' class="table table-hover">
    <thead  class="thead-light">
      <tr>
        <th>Employee ID</th>
        <th>Name</th>
        <th>Role</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each_with_index do |employee, index| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstname + ' ' + employee.lastname %></td>
          <td><%= employee.user_type %></td>
          <td><%= link_to "Add to Project", project_user_path(project_id: @project_id, id: employee), :class => "btn btn-outline-success", :style => "float:right"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>



<hr/>
  <h2>Active Employees</h2>
  <hr/>
  <table id='employee-table' class="table table-hover">
    <thead  class="thead-light">
      <tr>
        <th>No.</th>
        <th>Employee ID</th>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @selected_users.each_with_index do |employee, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= employee.id %></td>
          <td><%= employee.firstname + ' ' + employee.lastname %></td>
          <td><%= employee.username %></td>
          <td><%= employee.email %></td>
          <td><%= employee.user_type %></td>
          <td><%= link_to "Remove from Project", project_user_path(project_id: @project_id, id: employee), :class => "btn btn-outline-danger",method: :delete, :style => "float:right"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

