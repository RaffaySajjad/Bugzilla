<div class="container">
  <h1><%=current_user.firstname%>'s Feed</h1>
  <p>Hello <%=current_user.firstname + ' ' + current_user.lastname + ' (Emp ID: ' + current_user.id.to_s + ')' %></p>
  <%= link_to "Dashboard", developer_path(current_user.id), :class => "btn btn-success"%>
  <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "btn btn-outline-dark", :style => "float: right"%>
  <hr/>
  <h2>My tasks</h2>
  <hr/>
  <table id='developer-tasks-table' class="table table-hover">
    <thead  class="thead-light">
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>Deadline</th>
        <th>Type</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @my_bugs.each_with_index do |bug, index| %>
        <tr>
          <td><%= bug.title %></td>
          <td><%= bug.status %></td>
          <td><%= bug.deadline %></td>
          <td><%= bug.bug_type %></td>
          <td><%= link_to "Explore", dev_explore_path(id: bug), :class => "btn btn-outline-success", :style => "float:right"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr/>
    <h2>Explore tasks</h2>
  <hr/>
  <table id='other-tasks' class="table table-hover">
    <thead  class="thead-light">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Assignee Id</th>
        <th>Deadline</th>
        <th>Type</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @bugs.each_with_index do |bug, index| %>
        <tr>
          <td><%= bug.title %></td>
          <td><%= bug.description %></td>
          <td><%= bug.assignee_id %></td>
          <td><%= bug.deadline %></td>
          <td><%= bug.bug_type %></td>
          <td><%= link_to "Take up", developer_index_path(pid: $project_id, bid: bug), :class => "btn btn-outline-success", :style => "float:right"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
